{
    "name": "blackduck",
    "displayName": "blackduck",
    "description": "Black Duck Hub",
    "version": "0.0.1",
    "publisher": "valancej",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onCommand:vs-code-blackduck.login"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            },
            {
                "command": "vs-code-blackduck.login",
                "title": "Black Duck Login",
                "description": "Login to Black Duck",
                "icon": {
                    "light": "images/light/login.svg",
                    "dark": "images/dark/login.svg"
                }
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Black Duck configuration options",
            "properties": {
                "blackduck.showExplorer": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show or hide the Explorer"
                }
            }
        },
        "menus": {
            "view/title": [
                {
                    "command": "vs-code-blackduck.login",
                    "when": "view == blackDuckExplorer",
                    "group": "navigation"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "blackDuckExplorer",
                    "name": "Black Duck",
                    "when": "config.blackduck.showExplorer == true"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "request": "^2.83.0",
        "request-promise": "^4.2.2"
    }
}
